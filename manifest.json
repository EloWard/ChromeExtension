{
  "manifest_version": 3,
  "name": "EloWard",
  "version": "1.0.0",
  "description": "League of Legends rank badges for Twitch chat",
  "icons": {
    "16": "images/logo/icon16.png",
    "48": "images/logo/icon48.png",
    "128": "images/logo/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/icon16.png",
      "48": "images/logo/icon48.png",
      "128": "images/logo/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*",
    "https://eloward-riotrso.unleashai-inquiries.workers.dev/*",
    "https://eloward-twitchrso.unleashai-inquiries.workers.dev/*",
    "https://www.eloward.xyz/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "callback.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 