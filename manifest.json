{
  "manifest_version": 3,
  "name": "EloWard",
  "version": "0.1.0",
  "description": "Display League of Legends rank badges next to usernames in Twitch chat",
  "icons": {
    "16": "images/logo/icon16.png",
    "48": "images/logo/icon48.png",
    "128": "images/logo/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/icon16.png",
      "48": "images/logo/icon48.png",
      "128": "images/logo/icon128.png"
    }
  },
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.riotgames.com/*",
    "https://*.api.riotgames.com/*",
    "https://ddragon.leagueoflegends.com/*",
    "https://id.twitch.tv/*",
    "https://auth.riotgames.com/*",
    "https://eloward-riotrso.unleashai-inquiries.workers.dev/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["css/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "images/ranks/*.png",
        "js/*.js",
        "callback.html"
      ],
      "matches": ["https://*.twitch.tv/*", "https://auth.riotgames.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 