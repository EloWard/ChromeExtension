{
  "manifest_version": 3,
  "name": "EloWard",
  "version": "0.1.0",
  "description": "Display League of Legends rank badges next to usernames in Twitch chat",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://*.api.riotgames.com/*",
    "https://ddragon.leagueoflegends.com/*",
    "https://id.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["js/config.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "images/ranks/*.png"
      ],
      "matches": ["https://*.twitch.tv/*"]
    }
  ]
} 